@model WebApplication2.Models.CityFilterViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="mine-detail filter">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            Name:
            @Html.TextBoxFor(model => model.Name)
        </div>

        <div class="form-group">
            Email:
            @Html.TextBoxFor(model => model.Email)
        </div>
        <div class="form-group">
            MinTroopCount:
            @Html.TextBoxFor(model => model.MinTroupCount)
        </div>
        <div class="form-group">
            MaxTroopCount:
            @Html.TextBoxFor(model => model.MaxTroupCount)
        </div>
        <button type="submit">Submit</button>
    }
    <table style="border-spacing: 40px;">
        <tr>
            <td>City</td>
            <td>Troops</td>
        </tr>
    @if (Model.Results != null) { 
        foreach (var city in Model.Results)
        {
            <tr>
                <td>City-@city.CityId</td>
                <td>@city.Troops.Sum(_=> _.TroopCount)</td>
             </tr>
        }
    }
    </table>
</div>